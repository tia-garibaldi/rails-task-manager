<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

  <% if @task.completed == true %>
    <input type="checkbox" id="completed" name="Task complete!" checked><%= "Task Complete!" %>
  <% else %>
    <input type="checkbox" id="incomplete" name="Task not completed!"><%= "Task not competed!" %>
  <% end %>

<%= link_to "Back to list", tasks_path %>
<%= link_to "Edit task", edit_task_path %>
<%= link_to "Delete task", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
